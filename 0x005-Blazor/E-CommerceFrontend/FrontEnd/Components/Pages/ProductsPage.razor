@page "/Products"
@page "/"
<PageTitle>Products</PageTitle>

@if (newProducts.Count == 0)
{
    <h1>Sorry No Workouts Planned</h1>
}
else
{


    @* <div class="d-flex justify-content-center align-items-center"> *@

    <div class="row d-flex flex-row gap-4  ">
        <h1 class="align-content-center">Top Deals</h1>
        <div>
            
            <InputText @bind-Value="product.Name" class="form-control"></InputText>
        </div>
        @foreach (var product in newProducts)
        {
            <div class="card shadow col-4 p-4 " style="width: 18rem;">
                <img src="@product.Image" class="card-img-top" alt="@product.Name" />
                <div class="card-body d-flex flex-column justify-content-center">
                    <h2 class="card-title">@product.Name</h2>
                    <h7>@product.Description</h7>
                    <h7>@product.UnitPrice</h7>
                    <div class="d-flex flex-row justify-content-center">
                        @*   <span>
                @day.Day
                </span> *@
                        @*  <span>
                @memory.Location
                </span> *@

                    </div>
                </div>
                <div class="d-flex flex-row gap-2">
                    <button type="button" class="btn btn-primary btn-outline-light btn-sm m-7">Get Workout</button>

                    <button type="button" class="btn btn-secondary btn-outline-light btn-sm m-7">Edit Workout</button>
                </div>
            </div>

        }
    </div>
    @* </div> *@
}
